numPedidos = int(input())

listaPedidos = []
for i in range(1, numPedidos + 1):
  prato = input()
  calorias = int(input())
  ehVegano = input()
  if ehVegano == 's':
    vegano  = '(Vegano)'
  else:
    vegano = '(Nao-vegano)'
  listaPedidos.append(f'Pedido {i}: {prato} {vegano} - {calorias} calorias')

for pedido in listaPedidos:
  print(pedido)
  print()
